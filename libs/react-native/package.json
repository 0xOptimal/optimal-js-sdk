{
  "name": "@getoptimal/react-native",
  "version": "0.3.0",
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "publishConfig": {
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "type-check": "tsc --noEmit",
    "build": "tsup-node index.ts sdk.ts"
  },
  "tsup": {
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true
  },
  "peerDependencies": {
    "react-native": ">=0.71.6"
  },
  "dependencies": {
    "@getoptimal/js-sdk": "workspace:*",
    "@react-native-community/netinfo": "^9.3.9",
    "@tanstack/react-query": "^4.29.5",
    "react-native-url-polyfill": "^1.3.0"
  },
  "devDependencies": {
    "@getoptimal/eslint-config": "workspace:*",
    "@types/node": "^18.16.0",
    "@types/react": "^18.0.37",
    "eslint": "^8.38.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
